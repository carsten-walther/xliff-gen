<?xml version="1.0" encoding="UTF-8"?>
<xliff version="1.0" xmlns="urn:oasis:names:tc:xliff:document:1.1">
    <file source-language="{{ xlf.sourceLanguage }}" {% if xlf.targetLanguage %}target-language="{{ xlf.targetLanguage }}"{% endif %} datatype="plaintext" {% if xlf.original %}original="{{ xlf.original }}"{% endif %} date="{{ xlf.date | date('c') }}" product-name="{{ xlf.productName }}">
        <header/>
        <body>
            {% if xlf.translationUnits %}
            {% for translationUnit in xlf.translationUnits %}
            <trans-unit id="{{ translationUnit.id }}" resname="{{ translationUnit.resname }}">
                <source>{{ translationUnit.source }}</source>
                {% if translationUnit.target %}<target>{{ translationUnit.target }}</target>{% endif %}
            </trans-unit>
            {% endfor %}
            {% endif %}
        </body>
    </file>
</xliff>
